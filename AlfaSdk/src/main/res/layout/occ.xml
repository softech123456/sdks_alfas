<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.softech.alfasdk.Fragments.accountOpening.State6Fragment">
    <RelativeLayout
        android:background="@drawable/bg_gradient_cover"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/back_btn"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_47sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:gravity="start"
            android:text="Other"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Information"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:layout_below="@+id/tvTitle"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"/>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_110sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ScrollView
            android:paddingTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Occupation:"
                    android:textColor="@color/blackBackground"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/llCheckboxes1"
                        android:layout_gravity="start"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <CheckBox
                            android:id="@+id/checkbox1"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Professional"/>
                        <CheckBox
                            android:id="@+id/checkbox2"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Retired Person"/>
                        <CheckBox
                            android:id="@+id/checkbox3"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business Executive"/>
                        <CheckBox
                            android:id="@+id/checkbox4"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Govt. /Public Sector"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llCheckboxes2"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/llCheckboxes1"
                        app:layout_constraintEnd_toStartOf="@+id/llCheckboxes3">
                        <CheckBox
                            android:id="@+id/checkbox5"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agriculture"/>
                        <CheckBox
                            android:id="@+id/checkbox6"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Housewife"/>
                        <CheckBox
                            android:id="@+id/checkbox7"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Household"/>
                        <CheckBox
                            android:id="@+id/checkbox8"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Industrial"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llCheckboxes3"
                        android:layout_gravity="end"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <CheckBox
                            android:id="@+id/checkbox9"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Business"/>
                        <CheckBox
                            android:id="@+id/checkbox10"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service"/>
                        <CheckBox
                            android:id="@+id/checkbox11"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Studend"/>
                        <CheckBox
                            android:id="@+id/checkbox12"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Gross Annual Income:"
                    android:textColor="@color/blackBackground"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/checkbox13"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Below Rs. 100,000"/>
                        <CheckBox
                            android:id="@+id/checkbox14"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 100,001 - Rs. 250,000"/>
                        <CheckBox
                            android:id="@+id/checkbox15"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 250,001 - Rs. 500,000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/checkbox16"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 500,001 - Rs. 1,000,000"/>
                        <CheckBox
                            android:id="@+id/checkbox17"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs. 1,000,001 - Rs. 2,500,000"/>
                        <CheckBox
                            android:id="@+id/checkbox18"
                            android:textSize="@dimen/_9ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Above Rs. 2,500,001"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_14sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Source of Income-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:hint="Source of Income"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etIncomeSource"
                            android:inputType="text"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Name of Employer/Business-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:hint="Name of Employer / Business"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmployerName"
                            android:inputType="text"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Job Title/Designation-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:hint="Job Title/Designation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etJobTitle"
                            android:inputType="text"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Department-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:hint="Department"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDepartment"
                            android:inputType="text"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Address of Employer/Business-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:hint="Address of Employer/Business"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmployerBusiness"
                            android:inputType="text"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Zakat Status-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutStyle"
                        android:visibility="gone"
                        android:hint="Zakat Status"
                        app:endIconDrawable="@drawable/ic_drop_down"
                        app:endIconTint="@color/alfaRed"
                        app:endIconMode="custom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etZakatStatus"
                            android:inputType="text"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:focusableInTouchMode="false"
                            style="@style/AppTheme.EditText"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnNext"
                        android:text="Next"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        style="@style/AppTheme.Button"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>